{
  "compilerOptions": {
    // "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "dom", "es2017"],
    "target": "es6",
    "noImplicitAny": true,
    // "moduleResolution": "node",
